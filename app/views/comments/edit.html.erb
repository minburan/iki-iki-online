<h1>編集画面</h1>

<% if @comment.errors.any? %>
  <%= @comment.errors.count %>件のエラーがあります
  <ul>
    <% @comment.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @comment, url: comment_path(@comment), method: :patch do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>
  <%= f.submit '保存する'%>

<% end %>
