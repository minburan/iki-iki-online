<div class ="container-fluid">
  <div class="row no-gutters">
    <div class="col-md-8 mx-5 mx-sm-auto text-center shadow-lg rounded px-0 my-4">
      <h3 class ="text-light bg-dark py-3 mb-0">投稿一覧</h3>

       <div class ="col-md-10 offset-md-1">
       <table class ="table table-hover">
        <thead>
         <tr>
          <th></th>
          <th>タイトル</th>
          <th>本文</th>
         </tr>
        </thead>
        <tbody>
         <% @comments.each do |comment| %>
          <tr>
          <td>
            <%= image_tag comment.user.get_profile_image(100,100) %><br>
            <%= link_to user_path(comment.user) do %>
             <%= comment.user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to comment_path(comment.id) do%>
             <%= comment.title %>
            <% end %>
          </td>
          <td>
            <%= comment.body %><br>
            <%= link_to "#{comment.responses.count}件の返信", comment_path(comment.id) %>
          </td>
          </tr>
         <% end %>

          <%= paginate @comments %>
         </div>

        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>
