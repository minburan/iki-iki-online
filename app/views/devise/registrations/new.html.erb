<div class="container-fluid">
  <div class="row no-gutters">
    <div class="col-md-3 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-light bg-dark py-4 mb-0">新規登録画面</h5>
      <div class="form-body p-2">

        <%= form_with model: @user, url: user_registration_path do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        
        <div class="form-group">
          <div class="field">
            <%= f.label :名前（匿名OK）%><br>
            <%= f.text_field :name %>
          </div>
        </div>  
        
        <div class="form-group">
          <div class="field">        
            <%= f.label :メールアドレス %><br>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div>  

        <div class="form-group">
          <div class="field">
            <%= f.label :パスワード %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        </div>  

        <div class="form-group">
          <div class="field">
            <%= f.label :パスワード（確認） %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </div>  

        <div class="actions">
          <%= f.submit "新規登録", class:"btn btn-lg btn-block btn-info mt-3" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>