<div class="container-fluid">
  <div class="row no-gutters">
    <div class="col-md-3 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">ログイン</h5>
      <div class="form-body p-2">

        <div class="mx-auto text-center">
          <p>登録したメールアドレスと<br>パスワードを入力してください</p>
        </div>

        <%= form_with model: @user, url: user_session_path do |f| %>
        <div class="form-group">
          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "メールアドレス" %>
          </div>
        </div>

          <div class="form-group">
            <div class="field">
              <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword", placeholder:"パスワード" %>
            </div>
          </div>

          <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :パスワードを記憶する %>
          </div>
          <% end %>

          <div class="actions">
            <%= f.submit "ログイン", class:"btn btn-lg btn-block btn-info mt-3" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>